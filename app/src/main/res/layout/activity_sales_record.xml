<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SalesRecordActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="4"
        >

        <Button

            android:id="@+id/orderStatusButton"

            style="@style/MyButtonStyle"
            android:drawableStart="@drawable/ic_order"
            android:drawablePadding="12dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ORDER STATUS"
            android:textSize="18sp"
            android:fontFamily="@font/sfprotext_semibold"

            android:textColor="#828282"
            android:background="#FFFFFF"

            />

        <Button

            android:id="@+id/menuButton"
            style="@style/MyButtonStyle"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"

            android:drawableStart="@drawable/ic_menu"
            android:drawablePadding="12dp"
            android:paddingLeft="110dp"
            android:paddingRight="120dp"
            android:text="MENU"
            android:fontFamily="@font/sfprotext_semibold"

            android:textAlignment="textEnd"
            android:textColor="#828282"
            android:background="#FFFFFF"

            android:textSize="18sp" />


        <Button

            android:id="@+id/salesRecordButton"
            style="@style/MyButtonStyle"

            android:drawableLeft="@drawable/ic_chart_red"
            android:drawablePadding="12dp"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SALES RECORD"
            android:textSize="18sp"


            android:textColor="#FF4141"
            android:background="#FFF5F4"
            android:fontFamily="@font/sfprotext_semibold"

            />

        <Button

            android:id="@+id/settingsButton"
            style="@style/MyButtonStyle"

            android:drawableLeft="@drawable/ic_set"
            android:drawablePadding="12dp"
            android:paddingLeft="95dp"
            android:paddingRight="95dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SETTINGS"
            android:textSize="18sp"
            android:fontFamily="@font/sfprotext_semibold"

            android:textColor="#828282"
            android:background="#FFFFFF"

            />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FAFAFA">

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="900dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        >
        <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_gradient_rounded">
            <TextView
                android:id="@+id/today_net"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="TODAY NET INCOME"
                android:layout_marginTop="12dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:gravity="left"
                android:fontFamily="@font/sfprotext_semibold"
                android:textSize="18sp"
                android:textColor="#ffffff"
                />
            <TextView
                android:id="@+id/total_sales"
                android:layout_width="wrap_content"
                android:layout_below="@id/today_net"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/sfprotext_semibold"
                android:textSize="30sp"
                android:gravity="left"
                android:textColor="#ffffff"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="660dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/outline_rect">

        <TextView
            android:id="@+id/best_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEST SELLER"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/sfprotext_semibold"
            android:textSize="16sp"
            android:textColor="@color/pinkPrimary"/>

        <TextView
            android:id="@+id/dishes_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISHES SOLD"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sfprotext_semibold"
            android:textSize="16sp"
            android:textColor="@color/pinkPrimary"
            />

         <TextView
             android:id="@+id/best_seller_dish"
             android:layout_width="550dp"
             android:layout_marginTop="17dp"
             android:layout_marginLeft="25dp"
             android:layout_height="wrap_content"
             android:layout_below="@id/best_seller"
             android:fontFamily="@font/sfprotext_semibold"
             android:textSize="20sp"
             android:textColor="@color/colorPrimaryDark"
             />

            <TextView
                android:id="@+id/number_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="17dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/dishes_sold"
                android:fontFamily="@font/sfprotext_semibold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"/>

        </RelativeLayout>>


    </LinearLayout>

    <LinearLayout
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center"
        android:weightSum="8">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ORDER NO."
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/sfprotext_semibold"
            android:textSize="12dp"
            android:textColor="@color/lightgrey"
           android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MENU &amp; ADDS-ON"
            android:gravity="center_horizontal"
            android:layout_weight="6"
            android:fontFamily="@font/sfprotext_semibold"
            android:textSize="12dp"
            android:textColor="@color/lightgrey"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PRICE"
            android:layout_weight="1"
            android:fontFamily="@font/sfprotext_semibold"
            android:textSize="12dp"
            android:textColor="@color/lightgrey"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"/>


    </LinearLayout>

    <ListView
        android:id="@+id/salesRecordList"
        android:layout_gravity="center"
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"
        android:scrollbars="horizontal" />

</LinearLayout>