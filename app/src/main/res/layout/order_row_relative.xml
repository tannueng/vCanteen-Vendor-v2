<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?listPreferredItemHeight"
    android:padding="24dp"
    >

    <TextView
        android:id="@+id/orderNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"

        android:layout_marginStart="26dp"


        android:fontFamily="@font/sfprotext_regular"
        android:gravity="end"
        android:text="#1"
        android:textColor="#333333"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/foodName"
        android:layout_width="790dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"

        android:layout_marginTop="4dp"
        android:layout_marginEnd="48dp"
        android:layout_toStartOf="@+id/cancelButton"
        android:layout_toEndOf="@+id/orderNo"


        android:ellipsize="end"
        android:fontFamily="@font/sfprotext_bold"

        android:text="Fried Chicken with Sticky Rice Fried Chicken with Sticky Rice Fried Chicken with Sticky Rice"
        android:textColor="#333333"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/foodExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodName"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="48dp"

        android:layout_marginBottom="4dp"
        android:layout_toStartOf="@+id/cancelButton"
        android:layout_toEndOf="@+id/orderNo"
        android:fontFamily="@font/sfprotext_regular"
        android:text="Extra"
        android:textColor="#4F4F4F"
        android:textSize="24sp" />


    <Button
        android:id="@+id/cancelButton"
        style="@style/MyButtonStyle"

        android:layout_width="130dp"
        android:layout_height="48dp"


        android:layout_marginEnd="32dp"

        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/doneButton"

        android:fontFamily="@font/sfprotext_semibold"
        android:text="CANCEL"
        android:textColor="#FF9C9C"
        android:textSize="20sp" />

    <Button
        android:id="@+id/doneButton"
        style="@style/MyButtonStyle"

        android:layout_width="130dp"
        android:layout_height="68dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:layout_centerVertical="true"

        android:text="DONE"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/sfprotext_semibold"

        android:background="@drawable/shape_button"
        />
</RelativeLayout>