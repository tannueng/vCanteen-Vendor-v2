<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="226dp"
    android:layout_height="293dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"

    android:layout_marginBottom="48dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"


    cardview:cardCornerRadius="4dp"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/cardViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_card_bg"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/menuImg"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:scaleType="centerCrop"
            cardview:srcCompat="@drawable/default_image" />


        <ImageView
            android:id="@+id/filter"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:background="@android:color/black"
            android:alpha="0.6"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/soldOutLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/sfprotext_bolditalic"
            android:text="NOT AVAILABLE"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/card_food_name"
            android:layout_width="202dp"
            android:layout_height="68dp"
            android:layout_above="@+id/card_food_price"
            android:layout_below="@+id/menuImg"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="2dp"

            android:fontFamily="@font/sfprotext_regular"
            android:maxLines="3"

            android:minLines="1"
            android:text="Fried Chicken with Sticky Rice"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/card_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="34dp"
            android:layout_marginBottom="12dp"

            android:fontFamily="@font/sfprotext_bold"
            android:gravity="end"
            android:text="TextView"
            android:textColor="#333333"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/card_food_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"

            android:fontFamily="@font/sfprotext_bold"
            android:gravity="end"
            android:text=".-"
            android:textColor="#333333"
            android:textSize="28sp" />




    </RelativeLayout>

</android.support.v7.widget.CardView>