<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900dp"
    android:layout_height="wrap_content"
    android:minHeight="?listPreferredItemHeight"
    android:padding="24dp"
    android:layout_marginHorizontal="70dp"
    >

    <TextView
        android:id="@+id/foodId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="26dp"
        android:fontFamily="@font/sfprotext_regular"
        android:gravity="end"
        android:text="#foodId"
        android:textColor="#333333"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/foodName"
        android:layout_width="680dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="48dp"
        android:layout_toStartOf="@+id/cancelButton"
        android:layout_toEndOf="@+id/orderNo"
        android:ellipsize="end"
        android:fontFamily="@font/sfprotext_bold"
        android:text="foodName"
        android:textColor="#333333"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/foodExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodName"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="4dp"
        android:layout_toStartOf="@+id/foodPrice"
        android:layout_toEndOf="@+id/orderNo"
        android:fontFamily="@font/sfprotext_regular"
        android:text="foodExtra"
        android:textColor="#4F4F4F"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/foodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:text="foodProce.-"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/sfprotext_semibold"
        android:textSize="20sp"
        android:textColor="#4F4F4F"/>
</RelativeLayout>